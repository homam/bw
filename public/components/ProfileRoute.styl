.profile-route
    padding 10px

    h3
        text-transform uppercase
        color #8A8A8A

    input[type="text"]
        width 100%
        height 50px
        padding-left 50px
        font-size 20px
        border 0
        outline none

        &:hover
            background-color #FAFAFA

        &:not(:last-child)
            border-bottom 1px solid #CCC

        &.name
            background-image url(/img/icon-name.png)
            background-repeat no-repeat
            background-position 15px 15px

        &.mobile
            background-image url(/img/icon-mobilenumber.png)
            background-repeat no-repeat
            background-position 15px 15px

    .box
        box-shadow 0px 1px 6px 2px #eae7e7
        margin auto
        border-radius 5px
        display flex
        flex-wrap wrap
