.leaderboard-route
    padding-top 10px

    .content
        transition opacity 0.7s

        &.transitioning
            opacity 0

    .loader
        border-top 1.1em solid rgba(204, 204, 204, 0.8)
        border-right 1.1em solid rgba(204, 204, 204, 0.8)
        border-bottom 1.1em solid rgba(204, 204, 204, 0.8)
        border-left 1.1em solid #8a8a8a
        margin-top 5px

    .leader-board
        box-shadow 0 0 6px 0 rgba(0,0,0,0.45)
        margin 5px

        .leader-board-item
            width auto
            margin-left 0

    .contest-info-component
        background-image url(/img/bg-curtain.png)
        background-position-y 230px
        height 87px
        margin auto
        display flex

        > .contest-image
          width 120px
          height 87px
          min-width 120px
          padding-left 0

        > .contest-info
            justify-content center
            display block
            margin-left 8px

        .title
            color #f2dc4f

        p
            color #fff
            font-size 25px
            margin 0
            font-weight 100
            text-transform uppercase
