.leaderboard-route
    padding-top 10px

    .content
        transition opacity 0.7s

        &.transitioning
            opacity 0

    .loader
        border-top 1.1em solid rgba(204, 204, 204, 0.8)
        border-right 1.1em solid rgba(204, 204, 204, 0.8)
        border-bottom 1.1em solid rgba(204, 204, 204, 0.8)
        border-left 1.1em solid #8a8a8a
        margin-top 5px

    .leader-board
        box-shadow 0 0 6px 0 rgba(0,0,0,0.45)
        margin 5px
        border-radius 7px

        .leader-board-item
            width auto
            margin-left 0

    .contest-info-container
        background-image url(/img/bg-curtain.png)
        background-position-y 230px
        height 87px
        margin auto
        display flex
        align-items center
        font-size 25px

        > .contest-image
            width 90px
            height 63px
            background-size contain
            background-repeat no-repeat

        > .contest-info
            justify-content center
            display block
            margin-left 8px

        .title
            color #f2dc4f
            font-weight bold
            
        p
            color #fff
            margin 0
            font-weight 100
            text-transform uppercase
