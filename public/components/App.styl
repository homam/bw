abs-container()
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  transform: translate3d(0, 0, 0)

menu-width = 260px
menu-transition()
  transition: transform 0.3s;

.hide
    opacity 0

.transition
    transition: opacity 0.3s;

.icon-close
    display block
    background-image url(/img/icon-close.png)
    width 24px
    height 24px


.icon-game
