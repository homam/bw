@keyframes shake {
  10%, 90% {
    transform: translate3d(-1px, 0, 0);
  }

  20%, 80% {
    transform: translate3d(2px, 0, 0);
  }

  30%, 50%, 70% {
    transform: translate3d(-4px, 0, 0);
  }

  40%, 60% {
    transform: translate3d(4px, 0, 0);
  }
}

.question-component
    height 80% // TODO (low prio): do not use % in height
    padding 10px
    width 100%
    margin auto

    .shake
          animation: shake 0.82s cubic-bezier(.36,.07,.19,.97) both;
          transform: translate3d(0, 0, 0);
          backface-visibility: hidden;
          perspective: 1000px;

    .question-container
        padding-bottom 22px

        .title
            color: #fff;
            font-size: 28px;
            min-height: 72px;
            display: flex;
            align-items: center;
            text-align: center;
            justify-content: center;

        .options-row
            display flex
            flex-wrap wrap
            justify-content: space-between
            margin-top: 18px

        .level-info
            text-align center
            color #F2DC4F
            font-weight bold
            padding-top 15px

        .option-container
            position relative
            margin 5px
            background: white;
            border-radius: 50%;
            background-position: center;
            background-size: contain;
            width: 70px;
            height: 70px;

            .mark
                width 100%
                height 100%
                position absolute
                z-index 1000
                display flex
                align-items center
                justify-content center
                font-weight bold
                font-size 30px

                &.wrong
                    color red

                &.correct
                    color green

            &:after
                content: ' ';
                display: block;
                width: 70px;
                height: 70px;
                background-color: silver;
                border-radius: 50%;
                transform: scale(1);
                border: solid 7px green;
                opacity: 0;
                transition: 0.1s

            &.correct
              &:after
                border-width: 30px
                opacity: 0.8
