.question-component
    height 100%

    .question-container
        height 100%
        background url(/img/bg-curtain.png) #000
        margin 10px
        border-radius 5px
        background-repeat no-repeat

        .title
            color #FFF
            font-weight bold
            font-size 26px

        img
            width 80px
            height 80px
            border-radius 150px

        .options-row
            display flex
            flex-wrap wrap

        .option-container
            position relative

            .mark
                width 100%
                height 100%
                position absolute
                z-index 1000
                display flex
                align-items center
                justify-content center
                font-weight bold
                font-size 30px

                &.wrong
                    color red

                &.correct
                    color green
