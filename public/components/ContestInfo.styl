.contest-info-component
    height: 87px
    margin auto
    overflow: hidden;
    background #fff
    background-position center
    border-radius 5px
    transform: translate3d(0, 0, 0)
    border: solid 1px rgba(101, 101, 101, 0.5);
    box-shadow: 0px 1px 5px 1px #888888;

    .row
        &.contest-info
            height: 40px

        &.timer
            background #2C667D
            height 50px
            padding 15px 5px
            padding-left 25px

    .contest-image
        height 40px
        min-width 120px
        background-size contain
        background-repeat no-repeat
        padding-left 65px
        display flex
        align-items center


    .contest-info
        display flex
        justify-content space-between
        align-items center
        margin 0 10px
        font-weight bold

        > .title
            font-size: 37px;
            overflow: hidden;
            word-break: break-all;
            word-wrap: break-word;
            white-space: nowrap;
            margin-bottom: 0;

        > .timer
            height: 33px;

        .level-number
            color #3D8EAF
            font-size 16px


    .container
        display: flex
        flex: 1


        .title
            font-size: 32px;
            margin-top: 3px;
            font-weight: bold;
            overflow: hidden;
            white-space: nowrap;

        .timer
            margin-top: -3px

    .progress-bar-component
        .progress
            .meter
                background green
                transition-timing-function linear !important
